<%- include("../../partials/header.ejs")%>

<%- include("../../partials/navbar.ejs")%>
<div class="container">
    <hr>
    <h2>Categorias</h2>
    <hr>
    <a href="/admin/categories/new" class="btn btn-success">Criar novas categorias</a>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titulo</th>
                <th>Slug</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% categories.forEach(category =>{ %>
            <tr>
                <td> <%=category.id %> </td>
                <td> <%=category.title %> </td>
                <td>  <%=category.slug %></td>
                <td>
                   <a href="/admin/categories/edit/<%=category.id%>"> <button class="btn btn-warning">Editar</button></a>
                    <form action="/categories/delete" method="POST" style="display: inline;" onsubmit="confirmarDelecao(event, this);">
                        <input type="hidden" name="id" value="<%=category.id %> ">
                        <button class="btn btn-danger">Deletar</button>
                    </form>

                    
                </td>
            </tr>
            <%})%>
        </tbody>
    </table>
</div>
<script>
    function confirmarDelecao(event, form){
        event.preventDefault();
        let decision=confirm("desejar realmente remover?");
        if(decision){
            form.submit();
        }
    }   
</script>

